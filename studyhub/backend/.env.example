# Flask Configuration
FLASK_APP=wsgi.py
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5100

# Database Configuration
DATABASE_URL=sqlite:///studyhub.db
TEST_DATABASE_URL=sqlite:///test.db

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 hours

# Service Integration
INDEXER_SERVICE_URL=http://localhost:8000
INDEXER_API_KEY=your_indexer_api_key_here
REDIS_URL=redis://localhost:6379/0

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB
ALLOWED_FILE_EXTENSIONS=pdf,doc,docx,txt,jpg,jpeg,png,zip

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/studyhub.log 