# Common Settings
COMPOSE_PROJECT_NAME=studyhub

# StudyIndexer Settings
INDEXER_API_KEY=replace_with_your_api_key
JWT_SECRET=replace_with_your_jwt_secret_min_32_chars
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
MAX_UPLOAD_SIZE=16777216
CHROMA_PERSIST_DIR=/app/data/chroma

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Backend Settings
FLASK_ENV=development
FLASK_APP=wsgi.py
SECRET_KEY=replace_with_your_flask_secret_key
DATABASE_URL=sqlite:///instance/studyhub.db
INDEXER_URL=http://studyindexer:8000

# Frontend Settings
NODE_ENV=development
REACT_APP_API_URL=http://localhost:5000
REACT_APP_INDEXER_URL=http://localhost:8000

# Note: Replace all placeholder values with your actual configuration
# Make sure to keep sensitive values secure and never commit them to version control 