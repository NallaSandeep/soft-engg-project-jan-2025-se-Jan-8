# Environment Configuration
# -------------------

# Core Settings
APP_ENV=development                 # Options: development, testing, production
DEBUG=true                          # Enable debug mode and API docs
VERSION=0.1.0                      # Application version

# Security Settings
# ----------------
# WARNING: Change these values in production!
API_KEY=your_api_key_here          # API key for service authentication
JWT_SECRET=your_jwt_secret_key_here_min_32_chars  # Min 32 characters
JWT_ALGORITHM=HS256                # JWT signing algorithm
JWT_TOKEN_PREFIX=Bearer            # Authorization header prefix
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30 # Token expiration time

# Rate Limiting
# ------------
RATE_LIMIT_ENABLED=true           # Enable/disable rate limiting
RATE_LIMIT_CALLS=100              # Number of calls allowed
RATE_LIMIT_PERIOD=3600            # Time period in seconds

# Vector Database (ChromaDB)
# ------------------------
CHROMA_HOST=localhost             # ChromaDB server host
CHROMA_PORT=8000                  # ChromaDB server port
CHROMA_PERSIST_DIR=./data/chroma  # Data persistence directory

# Document Processing
# -----------------
MAX_CHUNK_SIZE=1000              # Maximum text chunk size
CHUNK_OVERLAP=200                # Overlap between chunks
MAX_FILE_SIZE=16777216          # Maximum file size (16MB)

# Supported MIME types (comma-separated)
SUPPORTED_FILE_TYPES=application/pdf,text/plain,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/markdown

# Vector Embedding
# --------------
EMBEDDING_MODEL=all-MiniLM-L6-v2  # SentenceTransformer model
EMBEDDING_DEVICE=cpu              # Device for inference (cpu/cuda)

# Storage Paths
# ------------
UPLOAD_DIR=./data/uploads        # Temporary upload storage
PROCESSED_DIR=./data/processed   # Processed document storage
TEMP_DIR=./data/temp            # Temporary file storage
LOG_DIR=./logs                  # Application logs

# Redis Configuration (Optional)
# ---------------------------
REDIS_HOST=localhost            # Redis server host
REDIS_PORT=6379                # Redis server port
REDIS_DB=0                     # Redis database number
REDIS_PASSWORD=                # Redis password (if required)

# Logging
# -------
LOG_LEVEL=INFO                 # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s 